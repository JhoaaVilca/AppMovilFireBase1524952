<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/fondologin">

    <ImageView
        android:layout_width="139dp"
        android:layout_height="133dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:src="@drawable/comp" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="40sp" />


    <TextView
        android:layout_width="140dp"
        android:layout_height="30sp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:text="UserName"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/txtEmailLogin"
        android:layout_width="255dp"
        android:layout_height="40sp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:hint="Ingrese Usuario"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="93dp"
        android:layout_height="30sp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:text="Contraseña"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/txtPassLogin"
        android:layout_width="255dp"
        android:layout_height="40sp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:hint="Ingrese Contraseña"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/lblResetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foget your password?"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="Login"
        android:backgroundTint="@color/black"
        android:layout_gravity="end"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/lblregistrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="70dp"
        android:fontFamily="sans-serif-black"
        android:text="Don't have acount... Create"
        android:textColor="@color/black"
        android:clickable="true"
        />

</LinearLayout>