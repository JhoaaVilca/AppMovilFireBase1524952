<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:background="@drawable/registroclientes">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_margin="60dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="REGISTRAR CLIENTES"
        android:textColor="@color/white"
        android:textSize="30sp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="358dp"
        android:layout_height="470dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="@android:color/white"
        android:elevation="8dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="472dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="REGISTRO:"
                android:textColor="#406DE1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="438dp"
                android:columnCount="6"
                android:rowCount="6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="40dp"
                    android:text="DNI : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:text="APELLIDOS : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:text="NOMBRE : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:text="TEEFONO : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:text="CORREO : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:text="DIRECCION : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtdniucliente"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginTop="40dp"
                    android:alpha="0.5"
                    android:hint="Ingrese DNI"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />


                <EditText
                    android:id="@+id/txtapellidocliente"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:alpha="0.5"
                    android:hint="Ingrese Apellido"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtnombrecliente"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:alpha="0.5"
                    android:hint="Ingrese Nombre"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txttelefonocliente"
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:alpha="0.5"
                    android:hint="Ingrese Telefono"
                    android:inputType="number"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtcorreocliente"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:alpha="0.5"
                    android:hint="Ingrese Correo"
                    android:inputType="textEmailAddress"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtdirecciomcliente"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:alpha="0.5"
                    android:hint="Ingrese DirecciÃ³n"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </GridLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="1">

        <Button
            android:id="@+id/btnRegistroCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#4664E0"
            android:text="Registrar" />

        <Button
            android:id="@+id/btnLimpiarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#4664E0"
            android:text="Limpiar" />

        <Button
            android:id="@+id/btnCancelarcliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#4664E0"
            android:text="Canelar" />

    </GridLayout>

</LinearLayout>